<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    tools:context=".quiz.Fragments.FragmentQuesImage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/quiz_quesbox_height"
                android:orientation="vertical"
                android:background="@drawable/drawable_name"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/quiz_que_marTop"
                android:layout_marginBottom="@dimen/quiz_que_marBot">


                <TextView
                    android:id="@+id/dragAndDropQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ques_text_size"
                    android:textColor="@color/text_color"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_marginLeft="@dimen/quiz_que_sidemargins"
                    android:layout_marginRight="@dimen/quiz_que_sidemargins"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/quiz_dragdrop_mainque_ll_sidemargins"
                android:layout_marginRight="@dimen/quiz_dragdrop_mainque_ll_sidemargins">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="@dimen/quiz_dragdrop_que_ll_width"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="@dimen/quiz_dragdrop_iv_wh"
                            android:layout_height="@dimen/quiz_dragdrop_iv_wh"
                            android:layout_marginBottom="@dimen/quiz_dragdrop_iv_marBot"
                            />

                        <TableLayout
                            android:id="@+id/firstlinear"
                            android:layout_width="@dimen/quiz_dragdrop_tl_width"
                            android:layout_height="@dimen/quiz_dragdrop_tl_height"
                            android:background="@drawable/border"
                            android:gravity="center"
                            >

                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/quiz_dragdrop_que_ll_width"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/quiz_dragdrop_rt_ll_marLeft"
                        android:layout_weight="1"
                        android:layout_gravity="right">

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="@dimen/quiz_dragdrop_iv_wh"
                            android:layout_height="@dimen/quiz_dragdrop_iv_wh"
                            android:layout_marginBottom="@dimen/quiz_dragdrop_iv_marBot"
                            android:layout_gravity="right"
                            />

                        <TableLayout
                            android:id="@+id/secondlinear"
                            android:layout_width="@dimen/quiz_dragdrop_tl_width"
                            android:layout_height="@dimen/quiz_dragdrop_tl_height"
                            android:background="@drawable/border"
                            android:layout_gravity="right">

                        </TableLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="@dimen/quiz_dragdrop_que_ll_width"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/quiz_dragdrop_bt_ll_marTop">

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="@dimen/quiz_dragdrop_iv_wh"
                            android:layout_height="@dimen/quiz_dragdrop_iv_wh"
                            android:layout_marginBottom="@dimen/quiz_dragdrop_iv_marBot" />

                        <TableLayout
                            android:id="@+id/thirdlinear"
                            android:layout_width="@dimen/quiz_dragdrop_tl_width"
                            android:layout_height="@dimen/quiz_dragdrop_tl_height"
                            android:background="@drawable/border"
                            android:gravity="center">

                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/quiz_dragdrop_que_ll_width"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/quiz_dragdrop_rt_ll_marLeft"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="right">

                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="@dimen/quiz_dragdrop_iv_wh"
                            android:layout_height="@dimen/quiz_dragdrop_iv_wh"
                            android:layout_marginBottom="@dimen/quiz_dragdrop_iv_marBot"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/quiz_dragdrop_bt_ll_marTop"/>

                        <TableLayout
                            android:id="@+id/fourthlinear"
                            android:layout_width="@dimen/quiz_dragdrop_tl_width"
                            android:layout_height="@dimen/quiz_dragdrop_tl_height"
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:layout_gravity="right">

                        </TableLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/quiz_dragdrop_mainque_ll_sidemargins"
                android:layout_marginRight="@dimen/quiz_dragdrop_mainque_ll_sidemargins"
                android:layout_marginBottom="@dimen/quiz_dragdrop_options_ll_marBot"
                android:layout_weight="1"
                android:layout_gravity="right"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Options"
                    android:textAppearance="?android:textAppearanceMedium"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/quiz_dragdrop_tp_ll_marBot">

                    <TableLayout
                        android:id="@+id/bottomlinear1"
                        android:layout_width="@dimen/quiz_dragdrop_tl_width"
                        android:layout_height="@dimen/quiz_dragdrop_tl_height"
                        android:background="@drawable/border"
                        android:padding="@dimen/quiz_dragdrop_options_tl_padding"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/text_color"/>

                    </TableLayout>

                    <TableLayout
                        android:id="@+id/bottomlinear2"
                        android:layout_width="@dimen/quiz_dragdrop_tl_width"
                        android:layout_height="@dimen/quiz_dragdrop_tl_height"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:padding="@dimen/quiz_dragdrop_options_tl_padding"
                        android:layout_marginLeft="@dimen/quiz_dragdrop_rt_ll_marLeft">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/text_color"/>

                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TableLayout
                        android:id="@+id/bottomlinear3"
                        android:layout_width="@dimen/quiz_dragdrop_tl_width"
                        android:layout_height="@dimen/quiz_dragdrop_tl_height"
                        android:background="@drawable/border"
                    android:padding="@dimen/quiz_dragdrop_options_tl_padding"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/text_color"/>

                    </TableLayout>

                    <TableLayout
                        android:id="@+id/bottomlinear4"
                        android:layout_width="@dimen/quiz_dragdrop_tl_width"
                        android:layout_height="@dimen/quiz_dragdrop_tl_height"
                        android:layout_marginLeft="@dimen/quiz_dragdrop_rt_ll_marLeft"
                        android:background="@drawable/border"
                        android:layout_gravity="right"
                        android:padding="@dimen/quiz_dragdrop_options_tl_padding"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/text_color"/>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
